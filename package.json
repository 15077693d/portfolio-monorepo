{
  "name": "portfolio-monorepo",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "build:api": "turbo build:api --env-mode=loose",
    "build:web": "turbo build:web --env-mode=loose",
    "start": "turbo start",
    "start:api": "turbo start:api",
    "start:web": "turbo start:web",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\""
  },
  "devDependencies": {
    "prettier": "^3.4.2",
    "turbo": "^2.3.4",
    "typescript": "5.7.3"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "npm@10.2.4",
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}
